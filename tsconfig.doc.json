{
  "include": ["src/**/*.ts"],
  "exclude": ["src/test.ts", "src/**/*.spec.ts", "src/app/file-to-exclude.ts"],
  "compilerOptions": {
    "baseUrl": "./",
    "sourceMap": true,
    "declaration": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "module": "es2020",
    "lib": ["es2018", "dom"]
  },
  "navTabConfig": [
    {
      "id": "example",
      "label": "Overview"
    },
    {
      "id": "info",
      "label": "API"
    },
    {
      "id": "source",
      "label": "Source"
    },
    {
      "id": "tree",
      "label": "DOM Tree"
    }
  ]
}